{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ticketing/microservices/shared/constants": [
        "libs/microservices/shared/constants/src/index.ts"
      ],
      "@ticketing/microservices/shared/env": [
        "libs/microservices/shared/env/src/index.ts"
      ],
      "@ticketing/microservices/shared/filters": [
        "libs/microservices/shared/filters/src/index.ts"
      ],
      "@ticketing/microservices/shared/middlewares": [
        "libs/microservices/shared/middlewares/src/index.ts"
      ],
      "@ticketing/shared/constants": ["libs/shared/constants/src/index.ts"],
      "@ticketing/shared/errors": ["libs/shared/errors/src/index.ts"],
      "@ticketing/shared/models": ["libs/shared/models/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
