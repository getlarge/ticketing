{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "esnext",
    "target": "es2022",
    "emitDecoratorMetadata": true,
    "types": [
      "jest",
      "node"
    ],
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.e2e-spec.ts",
    "**/*.mock.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "jest.teardown.ts"
  ]
}
