{
  "root": "apps/auth",
  "sourceRoot": "apps/auth/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/auth",
        "main": "apps/auth/src/main.ts",
        "tsConfig": "apps/auth/tsconfig.app.json",
        "assets": ["apps/auth/src/assets"],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/auth/src/environments/environment.ts",
              "with": "apps/auth/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "auth:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "auth:build:production"
        },
        "development": {
          "buildTarget": "auth:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/auth/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/auth"],
      "options": {
        "jestConfig": "apps/auth/jest.config.js",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build auth",
          "docker build -f ./apps/auth/Dockerfile . -t getlarge/ticketing-auth"
        ],
        "parallel": false
      }
    }
  },
  "tags": ["scope:auth", "type:app", "platform:server"]
}
