{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "emitDecoratorMetadata": true,
    "moduleResolution": "Bundler",
    "module": "esnext",
    "target": "es2022",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "jest.config.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}
