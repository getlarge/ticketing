{
  "openapi": "3.0.0",
  "paths": {
    "/api/payments": {
      "post": {
        "operationId": "PaymentsController_create",
        "summary": "Create payment request - Scope : payments:create_one",
        "description": "Attempt to charge for a ticket order",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePaymentDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Charge created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaymentDto"
                }
              }
            }
          }
        },
        "tags": [
          "payments"
        ],
        "security": [
          {
            "session": []
          },
          {
            "bearer": []
          }
        ]
      }
    }
  },
  "info": {
    "title": "Payments API",
    "description": "Ticketing payments API description",
    "version": "0.2.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "payments",
      "description": ""
    }
  ],
  "servers": [
    {
      "url": "http://localhost:3040"
    },
    {
      "url": "http://localhost:80"
    },
    {
      "url": "http://ticketing.dev"
    }
  ],
  "components": {
    "securitySchemes": {
      "session": {
        "type": "apiKey",
        "in": "cookie",
        "name": "session"
      },
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "CreatePaymentDto": {
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "description": "Order for which payment is attempted"
          },
          "token": {
            "type": "string",
            "description": "Stripe token",
            "example": "tok_visa"
          }
        },
        "required": [
          "orderId",
          "token"
        ]
      },
      "PaymentDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Charge internal identifier"
          },
          "orderId": {
            "type": "string",
            "description": "Reference to the order"
          },
          "stripeId": {
            "type": "string",
            "description": "Reference to the stripe charge"
          },
          "version": {
            "type": "number",
            "description": "Payment version represented by a number incremented at each updated"
          }
        },
        "required": [
          "id",
          "orderId",
          "stripeId",
          "version"
        ]
      }
    }
  },
  "security": [
    {
      "session": []
    },
    {
      "bearer": []
    }
  ]
}